<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">

    <display-name>Gunsioo Console Web Application</display-name>
    <description>
        A web application that includes the Gunsioo Console servlet.
    </description>

    <servlet>
        <servlet-name>GunsiooConsole</servlet-name>
        <servlet-class>org.gunsioo.server.web.WebServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>GunsiooConsole</servlet-name>
        <url-pattern>/console/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/console.html</welcome-file>
    </welcome-file-list>

</web-app>
